<static name="Bottom" type="model">
    <material name="Rock"/>
    <look name="seabed"/>
    <world_transform rpy="0 0.0 0" xyz="0 0 0.0"/>
    <physical>
        <mesh filename="$(find smarc_stonefish_worlds)/data/greenland_world/petermann_mesh.obj" scale="1"/>
        <origin rpy="3.1416 0.0 1.5708" xyz="0 0 500"/>
    </physical>
    <visual>
        <mesh filename="$(find smarc_stonefish_worlds)/data/greenland_world/petermann_mesh.obj" scale="1"/>
        <origin rpy="3.1416 0.0 1.5708" xyz="0 0 500"/>
    </visual>
</static>

</scenario>
